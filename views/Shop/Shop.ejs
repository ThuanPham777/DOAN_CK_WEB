<div class="shop-page py-14 px-6">
    <!-- sort section -->
    <div class="text-right">
        <!-- sort section -->
        <form method="GET" action="/shop">
            <div>
                <div class="flex flex-col">
                    <label>
                        <select name="sort" onchange="this.form.submit()" class="filter-dropdown  border focus:outline-none focus:ring-2 py-2">
                            <option value="" <%=!sortOption.sort ? 'selected' : '' %>>Sort By</option>
                            <!-- No sorting option selected by default -->
                            <option value="price-asc" <%=sortOption.sort==='price-asc' ? 'selected' : '' %>>Price: Low to
                                High
                            </option>
                            <option value="price-desc" <%=sortOption.sort==='price-desc' ? 'selected' : '' %>>Price: High to
                                Low
                            </option>
                            <option value="name-asc" <%=sortOption.sort==='name-asc' ? 'selected' : '' %>>Name: A to Z
                            </option>
                            <option value="name-desc" <%=sortOption.sort==='name-desc' ? 'selected' : '' %>>Name: Z to A
                            </option>
                            <option value="createdAt-asc" <%=sortOption.sort==='createdAt-asc' ? 'selected' : '' %>>New: Old
                                to
                                New
                            </option>
                            <option value="createdAt-desc" <%=sortOption.sort==='createdAt-desc' ? 'selected' : '' %>>New:
                                New
                                to Old
                            </option>
                        </select>
                    </label>
                </div>
            </div>
        </form>
    </div>
    <div class="flex">
        <!-- Filter Section -->
        <div class="w-1/4 p-4">
            <h2 class="text-2xl font-semibold mb-4">Filter Products</h2>
            <!-- Filter elements -->
            <form id="filterForm" method="GET" action="/shop">
                <div>
                    <h3 class="text-lg font-semibold">Price</h3>
                    <div class="flex flex-col">
                        <label><input type="checkbox" class="filter-checkbox" name="price" value="$0-$100"
                                <%=filters.price==='$0-$100' ? 'checked' : '' %> onchange="this.form.submit()" /> Under
                            $100</label>
                        <label><input type="checkbox" class="filter-checkbox" name="price" value="$100-$200"
                                <%=filters.price==='$100-$200' ? 'checked' : '' %> onchange="this.form.submit()" /> $100
                            - $200</label>
                        <label><input type="checkbox" class="filter-checkbox" name="price" value="$200-$300"
                                <%=filters.price==='$200-$300' ? 'checked' : '' %> onchange="this.form.submit()" /> $200
                            - $300</label>
                        <label><input type="checkbox" class="filter-checkbox" name="price" value="over $300"
                                <%=filters.price==='over $300' ? 'checked' : '' %> onchange="this.form.submit()" />
                            Above $300</label>
                    </div>
                </div>
                <div>
                    <h3 class="text-lg font-semibold">Category</h3>
                    <div class="flex flex-col">
                        <label><input type="checkbox" class="filter-checkbox" name="category" value="Lamps"
                                <%=filters.category && filters.category.includes('Lamps') ? 'checked' : '' %>
                            onchange="this.form.submit()" /> Lamps</label>
                        <label><input type="checkbox" class="filter-checkbox" name="category" value="Tables"
                                <%=filters.category && filters.category.includes('Tables') ? 'checked' : '' %>
                            onchange="this.form.submit()" /> Tables</label>
                        <label><input type="checkbox" class="filter-checkbox" name="category" value="Chairs"
                                <%=filters.category && filters.category.includes('Chairs') ? 'checked' : '' %>
                            onchange="this.form.submit()" /> Chairs</label>
                    </div>
                </div>
                <div>
                    <h3 class="text-lg font-semibold">Manufacturer</h3>
                    <div class="flex flex-col">
                        <label><input type="checkbox" class="filter-checkbox" name="manufacturer" value="Vitra"
                                <%=filters.manufacturer && filters.manufacturer.includes('Vitra') ? 'checked' : '' %>
                            onchange="this.form.submit()" /> Vitra</label>
                        <label><input type="checkbox" class="filter-checkbox" name="manufacturer" value="IKEA"
                                <%=filters.manufacturer && filters.manufacturer.includes('IKEA') ? 'checked' : '' %>
                            onchange="this.form.submit()" /> IKEA</label>
                        <label><input type="checkbox" class="filter-checkbox" name="manufacturer" value="Herman Miller"
                                <%=filters.manufacturer && filters.manufacturer.includes('Herman Miller') ? 'checked'
                                : '' %> onchange="this.form.submit()" /> Herman Miller</label>
                    </div>
                </div>
                <div>
                    <h3 class="text-lg font-semibold">Material</h3>
                    <div class="flex flex-col">
                        <label><input type="checkbox" class="filter-checkbox" name="material" value="Wood"
                                <%=filters.material && filters.material.includes('Wood') ? 'checked' : '' %>
                            onchange="this.form.submit()" /> Wood</label>
                        <label><input type="checkbox" class="filter-checkbox" name="material" value="Plastic"
                                <%=filters.material && filters.material.includes('Plastic') ? 'checked' : '' %>
                            onchange="this.form.submit()" /> Plastic</label>
                        <label><input type="checkbox" class="filter-checkbox" name="material" value="Metal"
                                <%=filters.material && filters.material.includes('Metal') ? 'checked' : '' %>
                            onchange="this.form.submit()" /> Metal</label>
                    </div>
                </div>
            </form>
        </div>

        <!-- Products List -->
        <div class="w-3/4 p-4" id="productListContainer">
            <h1 class="text-3xl font-bold mb-8">Our Products</h1>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6" id="productList">
<% products.forEach(product=> { %>
    <div
        class="bg-white shadow-lg rounded-lg overflow-hidden transform hover:scale-105 transition duration-300 ease-in-out">
        <a href="/shop/<%= product._id %>">
            <img src="<%= product.images[0] %>" alt="<%= product.name %>" class="w-full h-64 object-cover" />
        </a>
        <div class="p-4">
            <h3 class="text-xl font-semibold">
                <%= product.name %>
            </h3>
            <div class="mt-2">
                <% if (product.salePrice) { %>
                    <div class="flex gap-4">
                        <p class="text-lime-500 line-through">$<%= product.price %>
                        </p>
                        <p class="text-lime-500 font-bold">$<%= product.salePrice %>
                        </p>
                    </div>
                    <% } else { %>
                        <p class="text-lime-500 font-bold">$<%= product.price %>
                        </p>
                        <% } %>
            </div>
            <a href="/shop/<%= product._id %>">
                <button class="bg-lime-500 text-white px-4 py-2 mt-4 rounded hover:bg-lime-600">View Details</button>
            </a>
        </div>
    </div>
    <% }) %>
            </div>
        </div>
    </div>
</div>